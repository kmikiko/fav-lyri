<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="col-md-6 mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= image_tag visitor.user_profile.icon.url, class: "icon_mini" %>
        <strong><%= visitor.user_profile.name %></strong>
      <% end %>
      さんが
    </span>

    <% case notification.action %>
    <% when 'follow' then %>
      <%= "あなたをフォローしました" %>
    <% when 'like' then %>
      <%= link_to 'あなたの投稿', notification.lyric, style: "font-weight: bold;" %>
      <%= "にいいねしました" %>
    <% when 'comment' then %>
      <% if notification.lyric.user_id == visited.id %>
        <%= link_to "あなたの投稿", notification.lyric, style: "font-weight: bold;" %>
      <% else %>
        <span>
          <%= link_to lyric_path(notification.lyric) do %>
            <%= image_tag image_url(notification.lyric.user.user_profile.icon).to_s, class: "icon_mini" %>
            <strong><%= notification.lyric.user.user_profile.name %>さんの投稿</strong>
          <% end %>
        </span>
      <% end %>
      <%= "にコメントしました" %>
      <p class="text-muted mb-0">
        <%= Comment.find_by(id: notification.comment_id)&.content %>
      </p>
    <% end %>
  </div>

    <%= notification.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
  <hr>
</div>