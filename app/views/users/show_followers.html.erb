<div class="container mx-auto py-8">
  <h2 class="text-2xl mb-4 text-gray-600"><%= @user.user_profile.name %>のフォロワー一覧</h2>

  <% if @followers.any? %>
    <div class="grid grid-cols-1 gap-4">
      <% @followers.each do |follower| %>
        <div class="w-64 mx-auto bg-white shadow-md rounded-lg p-4">
          <%= link_to user_path(follower.id) do %>
            <% if follower.user_profile.icon && follower.user_profile.icon.url %>
              <%= image_tag(follower.user_profile.icon.url, class: "rounded-full w-12 h-12 mx-auto") %>
            <% else %>
              <%= image_tag("default.png", class: "rounded-full w-12 h-12 mx-auto") %>
            <% end %>
          <span class="block text-center mt-2"><%= follower.user_profile.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 mt-4 text-center">フォロワーはまだいません。</p>
  <% end %>
</div>